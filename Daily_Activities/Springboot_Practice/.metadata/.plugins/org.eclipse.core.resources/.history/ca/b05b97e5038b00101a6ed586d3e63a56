package com.gl.microservice.client;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.cloud.client.ServiceInstance;
import org.springframework.cloud.client.loadbalancer.LoadBalancerClient;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

@RestController
public class MyController {

    @Autowired
    LoadBalancerClient loadBalancerClient;

    // We are the LB to connect to the Microservice with the given name
    public String serverCommunication(String serverName) {
        // Similar to the db URI
        ServiceInstance serviceInstance = loadBalancerClient.choose(serverName);
        return serviceInstance.getUri().toString();
    }
    
    @PostMapping("/course/add")
    public String addCourse(String name, double fees) {
        Course course = new Course(name, fees);
        RestTemplate rt = new RestTemplate();
        String serviceName = "Course-Micro-Service"; 
        String serviceUrl = serverCommunication(serviceName);

        rt.postForEntity(serviceUrl + "/course/add", course, Course.class);

        return "Course added successfully";
    }

}
