package com.gl.security.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.gl.security.model.DeliveryStatus;
import com.gl.security.repo.DeliveryStatusRepo;

@Service
public class DeliveryStatusService {
	@Autowired
	DeliveryStatusRepo deliveryStatusRepo;
	
	public DeliveryStatus saveDeliveryStatus(DeliveryStatus deliveryStatus) {
        return deliveryStatusRepo.save(deliveryStatus);
    }

    public List<DeliveryStatus> getDeliveryStatusByOrderId(Long orderId) {
        return deliveryStatusRepo.findByOrderId(orderId);
    }

    public Optional<DeliveryStatus> getDeliveryStatusById(Long id) {
        return deliveryStatusRepo.findById(id);
    }

    public void deleteDeliveryStatus(Long id) {
        deliveryStatusRepo.deleteById(id);
    }

}
