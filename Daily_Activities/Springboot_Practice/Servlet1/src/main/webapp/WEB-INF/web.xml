<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">

    <display-name>Servlet 1</display-name>

    <!-- Register the servlet -->
    <servlet>
        <servlet-name>StudentRead</servlet-name>
        <servlet-class>com.gl.servlet.StudentReadServlet</servlet-class>
    </servlet>

    <!-- Servlet mapping -->
    <servlet-mapping>
        <servlet-name>StudentRead</servlet-name>
        <url-pattern>/student-read</url-pattern>
    </servlet-mapping>
    
    <!-- Register ProductServlet -->
    <servlet>
        <servlet-name>ProductCal</servlet-name>
        <servlet-class>com.gl.servlet.ProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductCal</servlet-name>
        <url-pattern>/product-cal</url-pattern>
    </servlet-mapping>
    
    
    <!-- Product List View Servlet -->
    <servlet>
        <servlet-name>ProductList</servlet-name>
        <servlet-class>com.gl.servlet.ProductViewServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ProductList</servlet-name>
        <url-pattern>/product-list</url-pattern>
    </servlet-mapping>
    
</web-app>
